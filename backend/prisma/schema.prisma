generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobStatus {
  PENDING
  COMPLETED
  FAILED
}

model Job {
  id              Int       @id @default(autoincrement())
  
  // E-mail Content
  recipient       String
  subject         String
  body            String
  
  // Metadata for Sender/Rate Limits
  senderId        String    
  user            User      @relation(fields: [senderId], references: [id])
  
  // Job Control
  status          JobStatus @default(PENDING)
  scheduledAt     DateTime
  sentAt          DateTime? 
  failureReason   String? 
  
  // Idempotency: Client-provided unique key to prevent duplicate schedules
  idempotencyKey  String?   @unique 

  // BullMQ job ID reference (optional, for debugging/correlation)
  bullMqJobId     String?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([status, scheduledAt]) // Optimization for polling if we weren't using BullMQ, but good for reporting
  @@index([senderId, scheduledAt]) // Useful for per-sender history
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String?  // Made optional for OAuth users
  name          String?  // Made optional
  googleId      String?  @unique // New field for Google OAuth
  authProvider  String?  // "google" or others
  role          String   @default("user") // "user" | "admin"
  refreshToken  String?  // Stored securely, still useful if we keep some hybrid auth later or just for session meta
  avatar        String?
  createdAt     DateTime @default(now())
  
  jobs          Job[]
}
