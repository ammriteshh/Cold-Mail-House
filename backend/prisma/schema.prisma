generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum JobStatus {
  PENDING
  SENT
  COMPLETED 
  FAILED
}

model Job {
  id              Int       @id @default(autoincrement())
  
  // E-mail Content
  recipient       String
  subject         String
  body            String
  
  // Removed User relation as this is now a single-user system
  // senderId        String    
  // user            User      @relation(fields: [senderId], references: [id])
  
  // Job Control
  status          JobStatus @default(PENDING)
  scheduledAt     DateTime
  sentAt          DateTime? 
  failureReason   String? 
  
  // Idempotency: Client-provided unique key to prevent duplicate schedules
  idempotencyKey  String?   @unique 

  // BullMQ job ID reference (optional, for debugging/correlation)
  bullMqJobId     String?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([status, scheduledAt])
}

// User model removed for simplification
